{
  "name": "@yoyodyne/foundation-x",
  "version": "1.0.0",
  "description": "Proposed Revamp of the In-House Design System",
  "keywords": [
    "demo",
    "design system",
    "react",
    "vite",
    "tailwindcss",
    "template",
    "prototype"
  ],
  "license": "BSD-3-Clause",
  "author": {
    "name": "Tim Goshinski",
    "email": "tim@code-chimp.com",
    "url": "https://code-chimp.com"
  },
  "homepage": "https://github.com/yoyodyne-build/foundation-x",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yoyodyne-build/foundation-x.git"
  },
  "bugs": {
    "url": "https://github.com/yoyodyne-build/foundation-x/issues"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "exports": {
    "./package.json": "./package.json",
    "./LICENSE": "./LICENSE",
    "./dist/foundation-x.css": "./dist/foundation-x.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "run-s build:pkg build:css build:storybook",
    "build:pkg": "tsup",
    "build:css": "tailwindcss build -i ./src/index.css -o ./dist/foundation-x.css --minify",
    "build:storybook": "storybook build",
    "commit": "czg",
    "check:build": "node ./scripts/validate-build.cjs",
    "check:commit": "commitlint --edit",
    "check:format": "prettier --check .",
    "check:exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "check:lockfile": "node ./scripts/validate-lockfile.cjs",
    "ci": "run-s check:format lint build check:build check:exports",
    "dev": "npm run storybook",
    "format": "run-p format:*",
    "format:code": "prettier --write .",
    "format:styles": "stylelint \"./src/**/*.css\" --fix",
    "format:ts": "eslint ./src/**/**.ts* --fix",
    "lint": "run-p lint:*",
    "lint:ts": "eslint ./src/**/**.ts*",
    "lint:styles": "stylelint \"./src/**/*.css\"",
    "release:version": "changeset version",
    "release:publish": "changeset publish",
    "release:local": "run-s release:version && release:publish",
    "prepublishOnly": "npm run ci",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006"
  },
  "volta": {
    "node": "22.11.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@changesets/cli": "^2.27.9",
    "@chromatic-com/storybook": "^3.2.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@storybook/addon-essentials": "^8.4.1",
    "@storybook/addon-interactions": "^8.4.1",
    "@storybook/addon-onboarding": "^8.4.1",
    "@storybook/addon-themes": "^8.4.1",
    "@storybook/blocks": "^8.4.1",
    "@storybook/react": "^8.4.1",
    "@storybook/react-vite": "^8.4.1",
    "@storybook/test": "^8.4.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/eslint__js": "~8.42.3",
    "@types/eslint-config-prettier": "~6.11.3",
    "@types/eslint-plugin-jsx-a11y": "~6.9.0",
    "@types/jsdom": "~21.1.7",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "^20.17.1",
    "@types/postcss-url": "~10.0.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "czg": "^1.10.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "eslint-plugin-storybook": "^0.10.2",
    "fast-glob": "^3.3.2",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-url": "^10.1.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "storybook": "^8.4.1",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.14",
    "tailwindcss-debug-screens": "^2.2.1",
    "tsup": "^8.3.5",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
